{% extends 'base.html.twig' %}

{% block title %}Mars{% endblock %}


{% block body %}
    {% form_theme form 'form_table_layout.html.twig' %}

    {{ form(form) }}

    {% if rovers is not empty %}

        <ul>
            {% for key, rover in rovers %}
                <li>
                    <span>Rover {{ key+1 }}:</span>
                    <span>{{ rover[1][0] }}</span>
                    <span> {{ rover[1][1] }}</span>
                    <span> {{ rover[0] }}</span>
                </li>
            {% endfor %}
        </ul>


    {% endif %}

{% endblock %}


{% block stylesheets %}

    <link href="{{ asset('bundles/marsrover/css/mars.css') }}" rel="stylesheet" />

    {{ parent() }}

{% endblock %}