<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <link href="{{ asset('css/main.css') }}"  rel="stylesheet"/>
            <link href="{{ asset('bootstrap/bootstrap.min.css') }}"  rel="stylesheet"/>
            <link href="{{ asset('bootstrap/bootstrap-theme.css') }}"  rel="stylesheet"/>

        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <script data-main="{{ asset('bundles/app/js/app') }}" src="{{ asset('bundles/app/js/lib/require.js') }}"></script>
    </head>

    <body>
        <div class="container">
            <div class="row">
                <div id="wrapper">
                    <div class="col-md-12">
                        <div id="header">
                            <div id="menu">

                            </div>
                        </div>
                    </div>


                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <div id="content" style="display: none;"></div>
                            </div>
                        </div>

                        {% block body %}

                            {{ locale_switcher() }}

                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>


    {% block javascripts %}

        <script src="{{ asset('js/jquery.min.js') }}"></script>

        <script src="{{ asset('bootstrap/bootstrap.min.js') }}"></script>

    {% endblock %}

    </body>
</html>
